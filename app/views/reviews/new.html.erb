<h2>Post Review</h2>

<%= form_for [@restaurant, @review] do |f| %>
  <p>
    <%= f.label :rating %><br>
    <%= f.text_field :rating %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Back to All Restaurants', restaurants_path %>
